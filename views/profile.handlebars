<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{first_name}} {{last_name}}</h2>!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="title">post title:</label>
        <input class="form-input" type="text" id="title" name="title" />
      </div>
      <div class="form-group">
        <label for="text">Text:</label>
        <textarea class="form-input" id="title" name="title"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">POST!!</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 project-list">
    <h3>Past Activity</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/posts/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
